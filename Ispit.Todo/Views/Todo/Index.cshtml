@model IEnumerable<Ispit.Todo.Models.ViewModel.ToDoListViewModel>
@{
    ViewData["Title"] = "ToDoList";
    int counter = 1;
}

<br/>
<br/>
<!-- ToDo List -->
<div class="container mt-5">
    <main role="main" class="pb-3">
        <h1>ToDo List</h1>
        <div class="card-body mt-5 p-0">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 30%">Title</th>
                        <th>Description</th>
                        <th style="width: 11%"><a asp-controller="Todo" asp-action="CreateToDoList" class="btn btn-block btn-secondary btn-sm"><i class="bi bi-plus-circle"></i> &nbsp; Add New</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="ToDo" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-eye"></i></a>
                                    <a asp-controller="ToDo" asp-action="EditToDoList" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-controller="ToDo" asp-action="DeleteToDoList" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>

@await Html.PartialAsync("_NewToDoList", "Todo")