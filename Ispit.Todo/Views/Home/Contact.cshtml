<!-- Contact Section Begin -->

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-5">
            <h4>Contacts Us</h4>
            <div class="contact-title mt-3">
                <p>Contact us with your suggestions and remarks. We will be happy to read your message in order to make browsing and shopping on our site easier and better.</p>
            </div>
            <div class="contact-widget">
                <div class="cw-item">
                    <div class="ci-icon"><i class="ti-location-pin"></i></div>
                    <div class="ci-text"><span>Address:</span><p>Cehovska 8. 34000 Požega</p></div>
                </div>
                <div class="cw-item">
                    <div class="ci-icon"><i class="ti-mobile"></i></div>
                    <div class="ci-text"><span>Phone:</span><p>+385 98 870 888</p></div>
                </div>
                <div class="cw-item">
                    <div class="ci-icon"><i class="ti-email"></i></div>
                    <div class="ci-text"><span>Email:</span><p>kresimir.wittenberg@gmail.com</p></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 offset-lg-1">
            <div class="contact-form">
                <h4>Leave A Comment</h4>
                <div class="leave-comment mt-3">
                    <p>Our staff will call back later and answer your questions.</p>
                    <form>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="text" class="form-control mt-3" placeholder=" Your name">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control mt-3" placeholder=" Your email">
                            </div>
                            <div class="form-group">
                                <textarea type="text" class="form-control mt-3" placeholder=" Your message"></textarea>
                            </div>
                        </div>
                        <div align="right">
                            <button type="submit" class="mt-3 btn btn-primary">Send Mesage</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

